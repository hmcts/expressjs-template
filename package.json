    "eslint-plugin-jest": "^28.6.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "lint-staged": "^15.2.7",
    "mini-css-extract-plugin": "^2.9.0",
    "nock": "^13.5.4",
    "nodemon": "^3.1.4",
    "pa11y": "^8.0.0",
