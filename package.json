    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^6.1.1",
    "webpack-node-externals": "^3.0.0"
  },
  "resolutions": {
    "@opentelemetry/instrumentation": "0.41.2",
    "semver": "^7.5.2"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,css,md,html,json}": "prettier --write"
  },
  "packageManager": "yarn@3.6.3"
}
