{
  "name": "rpe-expressjs-template",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production ./node_modules/.bin/ts-node -r tsconfig-paths/register src/main/server.ts",
    "start:dev": "nodemon --config nodemon.json",
    "lint": "sass-lint -v -q && eslint . --ext .js,.ts",
    "build": "yarn webpack --config webpack.config.js",
    "build:prod": "NODE_ENV=production yarn webpack --mode production --config webpack.config.js",
    "test": "npx if-env ${CI} && yarn test:unit || exit 0",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "test:routes": "jest -c jest.routes.config.js",
    "test:a11y": "jest -c jest.a11y.config.js --maxWorkers 15",
    "test:smoke": "NODE_TLS_REJECT_UNAUTHORIZED=0 jest -c jest.smoke.config.js",
    "test:functional": "NODE_TLS_REJECT_UNAUTHORIZED=0 codeceptjs --config ./src/test/functional/codecept.conf.js run --steps",
    "cichecks": "yarn && yarn build && yarn lint  && yarn test && yarn test:routes &&  yarn test:a11y"
  },
  "dependencies": {
    "@hmcts/info-provider": "^1.0.0",
    "@hmcts/nodejs-healthcheck": "^1.7.0",
    "@hmcts/nodejs-logging": "^3.0.2",
    "@hmcts/properties-volume": "^0.0.13",
    "@types/config": "^0.0.41",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.9.36",
    "@types/es6-promisify": "^6.0.1",
    "@types/express": "^4.17.9",
    "@types/glob": "^7.2.0",
    "@types/helmet": "^4.0.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.10",
    "@types/nunjucks": "^3.2.1",
    "@types/require-directory": "^2.1.1",
    "@types/serve-favicon": "^2.5.1",
    "applicationinsights": "^2.2.0",
    "axios": "^0.26.0",
    "config": "^3.3.7",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "express": "^4.17.2",
    "express-nunjucks": "^2.2.5",
    "glob": "^7.1.6",
    "govuk-frontend": "^4.0.0",
    "helmet": "^5.0.1",
    "jquery": "^3.5.1",
    "lodash": "^4.17.20",
    "nunjucks": "^3.2.2",
    "require-directory": "^2.1.1",
    "serve-favicon": "^2.5.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-env": "^7.16.10",
    "@types/chai-as-promised": "^7.1.1",
    "@types/jest": "^27.4.0",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "axios-debug-log": "^0.8.4",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codeceptjs": "^3.2.3",
    "copy-webpack-plugin": "^10.2.1",
    "css-loader": "^6.5.1",
    "debug": "^4.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^27.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-html-reporter": "^3.4.2",
    "lint-staged": "^13.0.3",
    "mini-css-extract-plugin": "^2.5.2",
    "nock": "^13.0.4",
    "node-sass": "^7.0.1",
    "nodemon": "^2.0.2",
    "pa11y": "^6.1.1",
    "playwright": "^1.18.1",
    "prettier": "^2.5.1",
    "request": "^2.88.0",
    "sass-lint": "^1.13.1",
    "sass-loader": "^13.0.2",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.4.0",
    "style-loader": "^3.3.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-middleware": "^5.3.0",
    "webpack-node-externals": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{js,ts}": "eslint --fix"
  }
}
