    "copy-webpack-plugin": "9.1.0",
    "css-loader": "6.8.1",
    "debug": "4.3.4",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "html-webpack-plugin": "5.5.1",
    "husky": "8.0.3",
    "jest": "^29.4.0",
    "jest-html-reporter": "3.10.2",
    "jest-junit": "16.0.0",
    "lint-staged": "13.2.2",
