    "supertest": "^7.1.0",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.3",
    "webpack": "5.94.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-middleware": "6.1.3",
    "webpack-node-externals": "3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{js,ts}": "eslint --fix"
  },
  "packageManager": "yarn@4.8.1"
}
