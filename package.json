{
  "name": "rpe-expressjs-template",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production ts-node -r tsconfig-paths/register src/main/server.ts",
    "start:dev": "nodemon --config nodemon.json",
    "lint": "stylelint **/*.scss -v -q && eslint . --ext .js,.ts && prettier --check .",
    "lint:fix": "prettier --write . .github && eslint --fix .",
    "build": "yarn webpack --config webpack.config.js",
    "build:prod": "NODE_ENV=production yarn webpack --mode production --config webpack.config.js",
    "test": "npx if-env CI=true && exit 0 || yarn test:unit",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "test:routes": "jest -c jest.routes.config.js",
    "test:a11y": "jest --detectOpenHandles -c jest.a11y.config.js --maxWorkers 15",
    "test:smoke": "NODE_TLS_REJECT_UNAUTHORIZED=0 jest -c jest.smoke.config.js",
    "test:functional": "NODE_TLS_REJECT_UNAUTHORIZED=0 yarn playwright install && codeceptjs run --steps",
    "cichecks": "yarn install && yarn build && yarn rebuild puppeteer && yarn lint && yarn test && yarn test:routes && yarn test:a11y",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hmcts/info-provider": "1.2.3",
    "@hmcts/nodejs-healthcheck": "1.8.5",
    "@hmcts/nodejs-logging": "4.0.4",
    "@hmcts/properties-volume": "0.0.14",
    "@types/body-parser": "1.19.6",
    "@types/config": "3.3.5",
    "@types/cookie-parser": "1.4.9",
    "@types/csurf": "1.11.5",
    "@types/es6-promisify": "6.0.4",
    "@types/glob": "8.1.0",
    "@types/helmet": "^4.0.0",
    "@types/lodash": "4.14.195",
    "@types/nunjucks": "3.2.6",
    "@types/require-directory": "2.1.6",
    "applicationinsights": "2.7.0",
    "axios": "1.7.4",
    "body-parser": "1.20.3",
    "config": "3.3.12",
    "cookie-parser": "1.4.7",
    "csurf": "1.11.0",
    "express": "5.1.0",
    "express-nunjucks": "3.1.2",
    "express-rate-limit": "^7.5.0",
    "glob": "10.4.5",
    "govuk-frontend": "^5.9.0",
    "helmet": "8.1.0",
    "jquery": "3.7.1",
    "lodash": "4.17.21",
    "nunjucks": "3.2.4",
    "postcss": "^8.4.27",
    "require-directory": "2.1.1",
    "serve-favicon": "2.5.1",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "superagent": "^10.2.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/eslint-parser": "7.28.0",
    "@babel/preset-env": "^7.26.9",
    "@codeceptjs/allure-legacy": "^1.0.2",
    "@codeceptjs/configure": "^0.10.0",
    "@types/chai": "^5.2.1",
    "@types/chai-as-promised": "7.1.8",
    "@types/express": "4.17.23",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/pa11y": "^5.3.7",
    "@types/serve-favicon": "^2.5.7",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axios-debug-log": "1.0.0",
    "babel-loader": "9.2.1",
    "chai": "4.5.0",
    "chai-as-promised": "7.1.2",
