{
  "name": "rpe-expressjs-template",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production ./node_modules/.bin/ts-node -r tsconfig-paths/register src/main/server.ts",
    "start:dev": "nodemon --config nodemon.json",
    "lint": "sass-lint -v -q && eslint . --ext .js,.ts && prettier --check .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "build": "yarn webpack --config webpack.config.js",
    "build:prod": "NODE_ENV=production yarn webpack --mode production --config webpack.config.js",
    "test": "npx if-env ${CI} && yarn test:unit || exit 0",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "test:routes": "jest -c jest.routes.config.js",
    "test:a11y": "jest -c jest.a11y.config.js --maxWorkers 15",
    "test:smoke": "NODE_TLS_REJECT_UNAUTHORIZED=0 jest -c jest.smoke.config.js",
    "test:functional": "NODE_TLS_REJECT_UNAUTHORIZED=0 codeceptjs --config ./src/test/functional/codecept.conf.js run --steps",
    "cichecks": "yarn && yarn build && yarn lint  && yarn test && yarn test:routes &&  yarn test:a11y",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hmcts/info-provider": "^1.0.0",
    "@hmcts/nodejs-healthcheck": "^1.7.3",
    "@hmcts/nodejs-logging": "^4.0.4",
    "@hmcts/properties-volume": "^0.0.14",
    "@types/config": "^3.3.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/csurf": "^1.9.36",
    "@types/es6-promisify": "^6.0.1",
    "@types/express": "^4.17.9",
    "@types/glob": "^8.0.0",
    "@types/helmet": "^4.0.0",
    "@types/lodash": "^4.14.185",
    "@types/node": "^18.7.16",
    "@types/nunjucks": "^3.2.1",
    "@types/require-directory": "^2.1.1",
    "@types/serve-favicon": "^2.5.1",
    "applicationinsights": "^2.3.4",
    "axios": "^0.27.2",
    "config": "^3.3.8",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "express": "^4.18.1",
    "express-nunjucks": "^2.2.5",
    "glob": "^8.0.3",
    "govuk-frontend": "4.3.1",
    "helmet": "^6.0.0",
    "jquery": "^3.6.1",
    "lodash": "^4.17.20",
    "nunjucks": "^3.2.2",
    "require-directory": "^2.1.1",
    "serve-favicon": "^2.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@babel/eslint-parser": "^7.18.9",
    "@babel/preset-env": "^7.19.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/jest": "^29.0.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "axios-debug-log": "^0.8.4",
    "babel-loader": "^8.2.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codeceptjs": "^3.3.5",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "debug": "^4.1.1",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-html-reporter": "^3.7.0",
    "lint-staged": "^13.0.3",
    "mini-css-extract-plugin": "^2.6.1",
    "nock": "^13.2.9",
    "node-sass": "^7.0.3",
    "nodemon": "^2.0.19",
    "pa11y": "^6.2.3",
    "playwright": "^1.25.2",
    "prettier": "^2.7.1",
    "request": "^2.88.0",
    "sass-lint": "^1.13.1",
    "sass-loader": "^13.0.2",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.4.0",
    "style-loader": "^3.3.1",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-middleware": "^5.3.3",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,css,md,html,json}": "prettier --write"
  }
}
